 

<div class="row" id="clearance" class="password-reset">
  <div class="col-md-6 col-md-offset-3 text-center">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="form-group" class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', autofocus: true, :class => "form-control", :placeholder => "Email" %>
    </div>

    <div class="submit-field">
      <%= form.submit :class => "btn btn-danger" %>
    </div>
  <% end %>
  </div>
</div>
