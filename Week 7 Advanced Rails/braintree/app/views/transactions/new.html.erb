<h1>Transactions#new</h1>
<p>Find me in app/views/transactions/new.html.erb</p>

<div class="credit-card-form">
    <%= form_for  :checkout_form, url: transactions_check_out_path, html:{ id: "checkout-form"} do |form| %>

        <div id="error-message"> </div>

        <%= form.label :card_number, "Card Number" %>
        <div class="hosted-field" id="card-number">    </div>

        <%= form.label :ccv, "CVV" %>
        <div class="hosted-field" id="cvv"></div>

        <%= form.label :expiration_date, "Expiration Date" %>
        <div class="hosted-field" id="expiration-date"></div>

        <%= form.hidden_field "payment_method_nonce" %>
        <%= form.submit "Give me $10.00", disabled: true, class: "btn btn-primary" %>

        <div class="clearfix"> </div>
    <% end %>
</div>